{
  "root": true,
  "extends": [
    "eslint:recommended",
    "plugin:vue/recommended"
  ],
  "rules": {
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "vue/attribute-hyphenation": ["off"]
  },
  "env": {
    "browser": true,
    "amd": true,
    "node": true,
    "es6": true,
    "commonjs": true
  }
}